{
  "manifest_version": 2,
  "name": "Lang Driller",
  "short_name": "Lang Driller",
  "description": "Fast words translation from English to Russian",
  "version": "1.0.1",
  "author": "Alexander Borshak",
  "icons" : {
    "128" : "icon.png"
  },
  "browser_action" : {
    "default_icon" : "icon.png"
  },
  "background" : {
    "scripts" : ["trigger.js"],
    "persistent" : false
    },
  "permissions" : ["activeTab"],
  "web_accessible_resources": ["enabled-icon.png", "content.css", "dict.js", "content.js"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+D",
        "mac": "Alt+Shift+D",
        "chromeos": "Alt+Shift+D",
        "linux": "Alt+Shift+D"
      }
    }
  }
}