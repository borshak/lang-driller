{
  "manifest_version": 2,
  "name": "Lang Driller",
  "short_name": "Lang Driller",
  "description": "Fast words translation from English to Russian",
  "version": "0.2.0",
  "author": "Alexander Borshak",
  "icons" : {
    "128" : "icon.png"
  },
  "browser_action" : {
    "default_icon" : "icon.png"
  },
  "background" : {
    "scripts" : ["trigger.js"],
    "persistent" : false
    },
  "permissions" : ["activeTab"],
  "web_accessible_resources": ["icon-enabled.png", "content.css", "dict.js", "content.js"]
}